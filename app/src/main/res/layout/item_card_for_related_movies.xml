<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_for_card_view_related_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/text_view_title_for_card_view_related_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_for_card_view_related_movies"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dp"
            android:maxLines="2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_year_for_card_view_realted_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textSize="10sp"
        android:layout_marginTop="7dp"
        android:layout_gravity="bottom" />

</android.support.v7.widget.CardView>