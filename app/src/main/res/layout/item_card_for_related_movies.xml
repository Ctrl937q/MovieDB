<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_for_card_view_related_movies"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:background="@drawable/placeholder_item_recycler_view"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_view_title_for_card_view_related_movies"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_year_for_card_view_realted_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textSize="10sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>